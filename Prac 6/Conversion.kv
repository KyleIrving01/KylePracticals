<Widget>:
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
    canvas.after:
        Color:
            rgba: 0, 0, 0, 1
    color: 0, 0, 0.7, 1
BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        TextInput:
            size_hint: 3, 1
            id: input_miles
            text: ''
            font_size: 48
            multiline: False
        BoxLayout:
            orientation: 'vertical'
            Button:
                text: 'Up'
                on_press: app.handle_increment(1)
            Button:
                text: 'down'
                on_press: app.handle_increment(1)
    Button:
        text: 'Convert miles to km'
        on_press: app.handle_calculate()
    Label:
        id: output_label
        font_size: 48
        color: (1, 1, 0, 1)

